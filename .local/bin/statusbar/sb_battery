#!/bin/sh


capacity="$(apm -l)"
time_left="$(apm -m)"
power_draw="$(sysctl hw.sensors.acpibat0.power0 | sed 's/.*=//g;s/ .*//g')"
printf "[ BAT: %s%% ][ %s W ]" "$capacity" "$power_draw"
if [ "$time_left" != "unknown" ]; then
	printf "[ %s' left ]" "$time_left"
fi
#printf "[ BAT: %s%% (%s' left) ]" "$capacity" "$time_left"
